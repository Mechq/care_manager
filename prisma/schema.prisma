generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Patient {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  email  String   @unique
  firstnName   String
  lastName   String
  dateOfBirth   DateTime
  Length  Int
  createdAt  DateTime  @default(now())
  Weight  Float
  clinicalProfile  String
  diet  String
  intakeDate  DateTime

}